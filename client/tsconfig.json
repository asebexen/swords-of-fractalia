  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true
  },
  "include": ["client/src/**/*.ts", "client/src/**/*.js", "client/src/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
